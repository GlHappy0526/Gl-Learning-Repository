<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bean.News" table="news">
        <id name="nid" column="nid" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="title" column="title" type="java.lang.String"></property>
        <property name="ncontent" column="ncontent" type="java.lang.String"></property>
    </class>
</hibernate-mapping>
