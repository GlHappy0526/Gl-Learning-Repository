<hibernate-mapping>
    <class name="bean.Products" table="products">
        <id name="pid" column="pid" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="pname" column="pname" type="java.lang.String"></property>
        <property name="introduction" column="introduction" type="java.lang.String"></property>
    </class>
